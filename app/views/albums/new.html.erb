<h1>CREATE A NEW ALBUM</h1>

<%= form_for @album do |f| %>
	<div>
		<%= f.label :name%>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.label :time_created%>
		<%= f.text_field :time_created %>
	</div>
	<div>
		<%= f.label :about %>
		<%= f.text_area :about  %>
	</div>

<h3>Add Photos</h3>

<%= f.fields_for :photos_attributes do |photo_fields| %>
		<div>
			<%= photo_fields.file_field :image %>
		</div>
		<div>
			<%= photo_fields.label :caption %>
			<%= photo_fields.text_field :caption %>
		</div>
		<div>
			<%= photo_fields.label :time %>
			<%= photo_fields.text_field :time %>
		</div>
	<% end %>
	

	<div>
		<%= f.submit "Create Your Album" %>
	</div>
<% end %>