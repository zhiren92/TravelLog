<%= render "shared/nav" %>

<div class="jumbotron">
	<h1>Travelers Log</h1>
	<h3>Keep track of your adventures</h3>

	<div class="container">
		<% if logged_in? %>

				<h2>Welcome Back <%= current_user.name %></h2>

				<button type="button" class="btn btn-default"><%= link_to 'Your adventures', albums_path %></button>

				<button type="button" class="btn btn-default"><%= link_to 'Log Out', logout_path, method: :delete %></button>

			<% else %>

				<h2>Welcome </h2>

				<button type="button" class="btn btn-default"><%= link_to "SignUp", new_user_path %></button>

				<button type="button" class="btn btn-default"><%= link_to 'Log In', login_path  %></button>

		<% end %>
	</div>
</div>
